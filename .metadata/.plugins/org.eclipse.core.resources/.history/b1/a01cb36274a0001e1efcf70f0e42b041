		System.out.println(" 5 -> Thursday");
		System.out.println(" 6 -> Friday");
		System.out.println(" 7 -> Saturday");
		System.out.println("=======================");
		System.out.print("\t Enter Your Choice:");
		choice=scanner.nextInt();
		System.out.println("=======================");
		switch(choice)
		{
		
		}
		
		

	}

}
